{
  "name": "spacelaxy-beta",
  "displayName": "Darkwaves",
  "description": "Beautiful dark themes collection by Spacelaxy LLC",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Themes"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "themes": [
      {
        "label": "Darkwaves: Celestial Mist",
        "uiTheme": "vs-dark",
        "path": "./themes/celestial-mist.json"
      }
    ],
    "commands": [
      {
        "command": "darkwaves.openThemeMenu",
        "title": "Open Darkwaves Theme Menu",
        "category": "Spacelaxy"
      }
    ],
    "configuration": {
      "title": "Spacelaxy Darkwaves",
      "properties": {
        "darkwaves.showStatusBar": {
          "type": "boolean",
          "description": "Show the Darkwaves status bar item. Default: true",
          "default": true
        },
        "darkwaves.statusBarText": {
          "type": "string",
          "description": "Text to display in the status bar. Default: 'Darkwaves'",
          "default": "Darkwaves"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}